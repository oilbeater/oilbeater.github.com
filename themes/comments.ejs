<% if(theme.comments.enable && theme.comments.waline.enable) { %>
  <% if (theme.cdns && theme.cdns.comments.waline && theme.cdns.comments.waline.enable) { %>
    <script async type="text/javascript" src='<%- theme.cdns.comments.waline.url %>' onload="loadWalineSuc(this)"></script>
  <% } else { %>
    <script async type="text/javascript" src="/plugins/waline.js" onload="loadWalineSuc(this)"></script>
  <% } %>

  <div id="waline-comments"></div>

  <script>
    function loadWalineSuc() {
      new Waline({
        el: '#waline-comments',
        path: location.pathname,
        serverURL: '<%- theme.comments.waline.serverURL %>'
      })
    }
  </script>
<% } %>

<% if(theme.comments.enable && theme.comments.disqus.enable) { %>
  <div id="disqus_thread"></div>
  <script>
    /**
    *  RECOMMENDED CONFIGURATION VARIABLES: EDIT AND UNCOMMENT THE SECTION BELOW TO INSERT DYNAMIC VALUES FROM YOUR PLATFORM OR CMS.
    *  LEARN WHY DEFINING THESE VARIABLES IS IMPORTANT: https://disqus.com/admin/universalcode/#configuration-variables*/
